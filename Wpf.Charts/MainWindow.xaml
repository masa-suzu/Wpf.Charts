<Window x:Class="Wpf.Charts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf.Charts"
        mc:Ignorable="d"
        Title="MainWindow" 
        SizeToContent="WidthAndHeight"
        ResizeMode="{Binding ResizeMode}" Closed="Window_Closed"
        MaxHeight="{Binding Height, BindsDirectlyToSource=True}" 
        MaxWidth="{Binding Width, BindsDirectlyToSource=True}" 
        MinHeight="{Binding MinHeight, BindsDirectlyToSource=True}" 
        MinWidth="{Binding MinWidth, BindsDirectlyToSource=True}" 
        Height="{Binding Height, BindsDirectlyToSource=True}"
        Width="{Binding Width, BindsDirectlyToSource=True}">

    <Window.DataContext>
        <local:MainWindowState></local:MainWindowState>
    </Window.DataContext>
    <Grid Margin="0,0,0,0">
        <TabControl Margin="0,0,0,0">
            <TabItem Header="Charts">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,0">
                </Grid>
            </TabItem>
            <TabItem Header="Config">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,0">
                    <TextBox Height="23" Margin="82,10,10,0" TextWrapping="Wrap" 
                             Text="{Binding Height, BindsDirectlyToSource=True}" VerticalAlignment="Top"/>
                    <TextBox Height="23" Margin="82,39,10,0" TextWrapping="Wrap" 
                             Text="{Binding Width, BindsDirectlyToSource=True}" VerticalAlignment="Top"/>
                    <Label Content="Max Height" HorizontalAlignment="Left" Margin="5,6,0,0" VerticalAlignment="Top"/>
                    <Label Content="Max Width" HorizontalAlignment="Left" Margin="5,35,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
